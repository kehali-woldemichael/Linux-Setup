# Use US layout with colemak
KEYMAPOPTS="us us-colemak"

# Set hostname to alpine-test
HOSTNAMEOPTS="-n alpine-std-aarch64"

# Contents of /etc/network/interfaces
INTERFACESOPTS="auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    hostname alpine-test
"

# Search domain of example.com, Cloudflare DNS resolver
DNSOPTS="-d example.com 1.1.1.1"

# Set timezone to UTC
TIMEZONEOPTS="-z EST"

# set http/ftp proxy
#PROXYOPTS="http://webproxy:8080"
PROXYOPTS=none

# Add a fastest mirror and enable community repos
APKREPOSOPTS="-cf"

# Install Openssh
SSHDOPTS="-c openssh"
# Use openntpd
NTPOPTS="-c openntpd"

# Use /dev/sda as a data disk
DISKOPTS="-m lvm /dev/sda"
